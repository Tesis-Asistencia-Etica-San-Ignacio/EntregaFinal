        </tr>
        <tr>
          <td class="signature-table-cell1">Fecha</td>
          <td class="signature-table-cell2"></td>
        </tr>
      </table>
      <% } %>

      <% if (data.clasificacion_riesgo === 'riesgo_mayor' || 
        data.tipo_estudio === 'intervencion_muestras' || data.clasificacion_riesgo === 'intervencion_medica') { %>
